<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.suai.zabik.activity.MainActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        style="@style/Theme.AppCompat.Light.DarkActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ActionBarColor"
        android:elevation="4dp">
        <Spinner
            android:id="@+id/setApiSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:saveEnabled="true"
            />
    </android.support.v7.widget.Toolbar>
    <Button
        android:id="@+id/languageFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="63dp"
        android:text="Button" />

    <Button
        android:id="@+id/languageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/languageFrom"
        android:layout_alignBottom="@+id/languageFrom"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text="Button" />

    <org.suai.zabik.views.NewEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/languageFrom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:maxLength="35"
        android:shadowColor="@color/colorAccent"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_above="@+id/historyAndFavoriteBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25dp" />

    <ImageButton
        android:id="@+id/historyAndFavoriteBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_lace" />




</RelativeLayout>
